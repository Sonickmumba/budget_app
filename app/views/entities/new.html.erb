<%= render "shared/navbara", {text:"Add Transaction", path: root_path, visible:"invisible"} %>
<%= form_with model: @group_entity, url: group_entities_path, method: :post do |f| %>
  <div class="card">
    <div class="card-body">

      <div class="mb-3">
        <%= f.label :name, { class: "form-label"} %>
        <%= f.text_field :name, { class: "form-control", autofocus: true, autocomplete: "name" } %>
      </div>

      <div class="mb-3">
        <%= f.label :amount %><br />
        <%= f.text_field :amount, { class: "form-control", autocomplete: "current-amount" } %>
      </div>

      <div class="actions">
        <%= f.submit "Add Transaction", data: {turbo: false}, class:"btn btn-primary" %>
      </div>

    </div>
  </div>
<% end %>
